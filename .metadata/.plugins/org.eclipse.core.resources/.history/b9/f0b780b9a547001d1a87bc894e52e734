#include "fsm_automatic.h"
#include "main.h"
	void fsm_automatic_run(){
		switch(status){
		case INIT:
			status = AUTO_RED;
			setTimer(500);
			break;
		case AUTO_RED:
			HAL_GPIO_WritePin(GPIOA, GPIO_PIN_7,1);
			HAL_GPIO_WritePin(GPIOA, GPIO_PIN_5,0);
			if(timer1_flag == 1){
			status = AUTO_GREEN;
			setTimer(300);
			}
			break;
		case AUTO_GREEN:
			HAL_GPIO_WritePin(GPIOA,GPIO_PIN_6,0);
			HAL_GPIO_WritePin(GPIOA, GPIO_PIN_5,1);
			if(timer1_flag==1){
			status = AUTO_YELLOW;
			setTimer(200);
			}
			break;
		case AUTO_YELLOW:
			HAL_GPIO_WritePin(GPIOA, GPIO_PIN_6,1);
			HAL_GPIO_WritePin(GPIOA, GPIO_PIN_7,0);
			if(timer1_flag == 1){
				status = AUTO_RED;
				setTimer(500);
			}
			break;
		default:
			break;
		}
	}
