#include "fsm_automatic.h"
	void fsm_automatic_run(){
		switch(status){
		case INIT:
			status = AUTO_RED;
			setTimer(500);
			break;
		case AUTO_RED:
			if(timer1_flag = 1){
			status = AUTO_GREEN;
			setTimer(300);
			}
			break;
		case AUTO_GREEN:
			if(timer1_flag){
			status = AUTO_YELLOW;
			setTimer(200);
			}
			break;
		case AUTO_YELLOW:
			if(timer1_flag){
				status = AUTO_RED;
				setTimer(500);
			}
			break;
		}
	}
